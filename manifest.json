{
  "manifest_version": 3,
  "name": "PROFLOW (Hackathon Prototype)",
  "version": "0.1.0",
  "description": "Detects potentially harmful/misinformation content and applies blur + mutes audio. Uses HuggingFace (optional) + fallback keywords.",
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
"permissions": ["storage", "activeTab", "scripting"],
"host_permissions": [
  "https://commentanalyzer.googleapis.com/*",
  "*://twitter.com/*",
  "*://x.com/*"
],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_title": "PROFLOW",
    "default_popup": "popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://twitter.com/*", "*://x.com/*"],
      "js": ["utils/blur.js","content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["assets/overlay.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
